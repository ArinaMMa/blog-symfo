{% extends 'base.html.twig' %}

{% block title %}
    Administration des catégories {{ parent() }}
{% endblock %}

{% block body %}
    <section class="container mt-2">
        <h1 class="text-center">Administration des catégories</h1>
        <a href="{{ path('admin.categories.create') }}" class="mt-2 btn btn-primary">Créer une catégorie</a>
        
        <div class="row mt-2 gy-4">
            {% for category in categories %}
                <div class="col-md-4">
                    <div class="card mt-3 border-{{ category.enable ? 'success' : 'danger' }} ">
                        <h2 class="card-header fs-4"> {{ category.name }} </h2>
                        <div class="card-body">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="category-id{{ category.id }}" {{ category.enable ? 'checked' }} data-switch-category-id="{{ category.id }}" />
                                <label class="form-check-label fw-bold text-{{ category.enable ? 'success' : 'danger' }}" for="category-switch-{{ category.id }}" > {{ category.enable ? 'Actif' : 'Inactif' }} </label>
                            </div>                            
                             <div class="d-flex flex-wrap justify-content-between mt-3">
                                 <a href="{{ path('admin.categories.update', {id: category.id}) }}" class="btn btn-warning" >Modifier</a>
                                {# {% include 'Backend/Categories/_deleteForm.html.twig' %} #}
                             </div>
                        </div>
                       
                    </div>
                </div>
            {% endfor %}
        </div>
        
    </section>
{% endblock %}